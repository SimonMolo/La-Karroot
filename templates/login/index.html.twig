{% extends 'users/base.html.twig' %}

{% block main %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form  action="{{ path('login') }}" method="post" class="formUser center">
        <div>
            <label for="exampleInputEmail1" class="form-label">Email</label>
            <input type="email" class="form-control inputUser" id="exampleInputEmail1"  name="_username"
        </div>
        <div>
            <label for="exampleInputPassword1" class="form-label">Mot de Passe</label>
            <input  type="password" class="form-control inputUser" id="exampleInputPassword1" name="_password"/>
        </div>
        <button type="submit" class="btn btn-primary">Valider</button>
    </form>
{% endblock main %}
